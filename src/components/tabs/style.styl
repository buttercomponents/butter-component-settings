[class=tabs-navigation]
    margin 0 auto
    font-size: 0.9em
    display: block
    padding-top 0px
    box-shadow: none
    text-align center
    background: var(--Navbar-bg)
    display: flex
    align-items: center
    justify-content: center
    position: fixed
    left: 0
    right: 0
    z-index: 99


    li
        display: inline-block
        padding: 0
        margin: 0 10px

        a
          border-bottom: 3px solid transparent
          color: inherit
          text-align: center
          vertical-align: middle
          font-family: var(--Font-title)
          font-weight: bold
          font-size: 18px
          height: 20px
          line-height: 20px
          padding: 15px 0
          margin: 0
          cursor: pointer
          display: block
          opacity: 0.4
          text-decoration: none
          text-transform: uppercase

          &:hover
            opacity: 0.9
            border-bottom: 3px solid rgba(255,255,255,0.2)

        &[class~=is-active]
            a
                border-bottom: 3px solid var(--Main-color)
                opacity: 1

[class=tab-panel]
    margin: auto
    padding-top: 53px
    max-width: 980px


.buttons-content
    margin: 25px auto
    text-align: center

.tabs-content
    display: block

.tab-section
    display block
    .content
        max-width: 780px
        margin: 0 auto

    .title
        font-weight: 900
        padding: 20px
        text-align: center
        opacity: .4
