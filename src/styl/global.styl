:global
    ul
        list-style: none

    .error
        background: #e74c3c
        border-radius: 5px
        color: #151515
        font-family: monospace
        padding: 5px 10px

    .fade-enter
        opacity: 0.01
        &.fade-enter-active
            opacity: 1
            transition: opacity 300ms ease-in

    .fade-leave
        opacity: 1
        &.fade-leave-active
            opacity: 0.01
            transition: opacity 300ms ease-out

    input
        &[type=text],
        &[type=number],
        &[type=password]
            background var(--Input-bg-color, rgba(0,0,0,0.45))
            border 0
            border-radius 5px
            color #FFF
            font-family: 'Arial', 'Helvetica', sans-serif
            font-size  0.95em
            font-weight normal
            line-height 0.70em
            outline 0
            padding: 7px 10px
            width 140px
            box-shadow: inset 0px 0px 1px 0px rgba(0,0,0,0.85)
            transition background .2s ease
