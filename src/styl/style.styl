.settings
    background-color: var(--Window-bg)
    margin: 0
    position absolute
    top: 0
    bottom: 0
    user-select: none
    width: 100%
    z-index: 1

    &.show-advanced
        .settings-row
            &.advanced
                height: auto !important
                opacity: 1 !important
                overflow: visible !important
                padding: 35px 20px !important
                transform: scale(1) !important

@import './global.styl'
