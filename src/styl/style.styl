.settings
    margin: auto
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    scrollable()

    &::-webkit-scrollbar-track
        margin-top: 53px

    &.show-advanced
        .settings-row
            &.advanced
                height: auto !important
                opacity: 1 !important
                overflow: visible !important
                padding: 35px 20px !important
                transform: scale(1) !important

@import './global.styl'
